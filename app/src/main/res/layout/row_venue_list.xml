<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_row_venue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:elevation="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/space_small_10"
            android:layout_marginBottom="@dimen/space_small_10"
            >
            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="7.7"
                android:gravity="center"
                android:background="@drawable/rating_background"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_size_16"
                android:padding="@dimen/space_small_8"
                android:textStyle="bold"
                android:layout_margin="@dimen/space_small_8"
                />

            <TextView
                android:id="@+id/tv_venue_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_small_4"
                android:layout_marginRight="60dp"
                android:padding="@dimen/space_small_4"
                android:ellipsize="marquee"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_24"
                android:textColor="@color/green_a200"
                android:text="Apple Fitness (24X7)"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_below="@+id/tv_venue_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/space_small_4"
                android:id="@+id/linearLayout"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16"
                    android:drawableLeft="@drawable/ic_place_24dp"
                    android:layout_marginLeft="@dimen/space_small_4"
                    android:layout_marginRight="60dp"
                    android:text="Jayanagar, 9th Block"
                     />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12"
                android:text="0.3km"
                android:layout_marginTop="@dimen/space_small_4"
                android:layout_marginLeft="@dimen/space_small_10"
                android:padding="@dimen/space_small_4"
                android:layout_below="@+id/linearLayout"
                android:background="@drawable/rounded_corners"
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>